<% include ../partials/header %>

<% if (typeof errors !== 'undefined') { %>
  <ul id="errors">
    <% errors.forEach(function(error) { %>
      <li><%= error.msg %><i class="material-icons right">close</i></li>
  <% }); %>
  </ul>
<% } %>

<div class="row">
  <div class="col s10 offset-s1">
  <h1 class="center-align">Add Review</h1>

  <form action="/review/add/5a4b9184d3eb105a222cc3dc" enctype="multipart/form-data" method="POST">

    <div class="col s12">
      <label for="title">Title</label>
      <input id="title" type="text" name="title" placeholder="Name the dish">
    </div>

  <div class="col s12">
      <label for="location">Location</label>
      <input id="location" type="text" name="location">
    </div>

  <div class="col s12">
      <label for="review">Review</label>
      <textarea id="review" class="materialize-textarea" name="review" placeholder="Share your thoughts"></textarea>
    </div>

    <div class="input-field col s8">
  <select name="quality">
    <option value="" disabled selected>Choose your option</option>
    <option value="1">1 Star (Bland)</option>
    <option value="2">2 Star</option>
    <option value="3" >3 Star</option>
    <option value="4">4 Star</option>
    <option value="5">5 Star (Tasty)</option>
  </select>
  <label>Quality</label>
</div>

    <div class="input-field col s8">
  <select name="quantity">
    <option value="" disabled selected>Choose your option</option>
    <option value="1">1 Star (Little)</option>
    <option value="2">2 Star</option>
    <option value="3" >3 Star</option>
    <option value="4">4 Star</option>
    <option value="5">5 Star (Plenty)</option>
  </select>
  <label>Quantity</label>
</div>

    <div class="input-field col s8">
  <select name="price">
    <option value="" disabled selected>Choose your option</option>
    <option value="1">1 Star (Overpriced)</option>
    <option value="2">2 Star</option>
    <option value="3" >3 Star</option>
    <option value="4">4 Star</option>
    <option value="5">5 Star (Reasonable)</option>
  </select>
  <label>Price</label>
</div>

    <div class="file-field input-field col s12">
      <div class="btn">
        <span>Photo</span>
        <input type="file" name="photo">
      </div>
      <div class="file-path-wrapper">
        <input class="file-path" type="text" placeholder="Upload your photo">
      </div>
    </div>

  <div class="col s12">
<button type="submit" class="waves-effect waves-light btn">Add Review</button>
</div>
  </form>


</div>
</div>
  <% include ../partials/footer %>
